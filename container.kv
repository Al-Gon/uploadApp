<ItemLabel@Label>
    font_size: '15sp'
    halign: 'left'
    valign: 'top'
    text_size: self.size

<Container>
    rows: 4
    file_path: file_path
    massage: massage
    step_info: step_info
    step_button: step_button

    AnchorLayout:
        TextInput:
            id: file_path
            text: 'Введите путь к файлу xlsx'
            multiline: False

    AnchorLayout:
        padding: [20, 5, 20, 5]
        ItemLabel:
            id: step_info
            text: ''

    AnchorLayout:
        padding: [20, 5, 20, 5]
        ItemLabel:
            id: massage
            text: ''

    GridLayout:
        cols: 2
        padding: [20, 5, 20, 5]

        Button:
            id : step_button
            text: 'Настройки'
            on_release: root.handle_press()

        Button:
            id : setting_button
            text: 'Обработка: шаг 1'
            on_release: root.handle_press()