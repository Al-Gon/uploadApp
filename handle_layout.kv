#:import utils kivy.utils

<HandleLayout>
    orientation: 'vertical'
    step_button: step_button
    size_hint: .95, .975
    pos_hint: {'x':.025, 'y':.025}
    console: console
    canvas:
        Color:
            rgba: utils.get_color_from_hex('#bcbcbc')
        Rectangle:
            pos: self.pos
            size: self.size

    AnchorLayout:
        size_hint: 1, .8
        anchor_x: 'center'
        anchor_y: 'center'

        ItemLabel:
            id: console
            size_hint: .94, .94
            message: 'Консоль'

    AnchorLayout:
        size_hint: 1, .2
        anchor_x: 'center'
        anchor_y: 'center'

        Button:
            size_hint: .6, .5
            id: step_button
            text: 'Шаг 1'
            on_release: app.root.handle_press_step(self.text)