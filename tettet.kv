#:import utils kivy.utils

<InputLabel@Label>
    halign: 'left'
    valign: 'top'
    text_size: self.size
    multiline: True
    markup: True
    size_hint: .3, .4
    pos_hint: {'x':.02, 'y':.5}
    color: utils.get_color_from_hex('#000000')

<InputString@TextInput>
    multiline: True
    markup: True
    background_normal: 'white_pixel.png'
    background_active: 'white_pixel.png'
    size_hint: .66, .4
    pos_hint: {'x':.32, 'y':.5}

<CheckSaveButton@Button>
    size_hint: .3, .3
    pos_hint: {'x':.68, 'y':.1}
    #text: 'Проверить/Сохранить'

<InputBlock>
    padding: [5, 5, 5, 5]
    size_hint: 1, None
    height: 120
    text_label: ''
    input_string: ''
    button_name: ''
    button_text: 'Проверить/Сохранить'
    input: input
    button_: button_

    InputLabel:
        text: root.text_label

    InputString:
        id: input
        text: root.input_string

    CheckSaveButton:
        id: button_
        name: root.button_name
        text: root.button_text

<Tettet>
    orientation: 'vertical'
    my_button: my_button
    save_dir_path: save_dir_path

    height: 200
    width: 200

    InputBlock:
        id: save_dir_path
        text_label: 'Путь к папке для хранения файлов:'
        input_string: 'Введите путь к папке для хранения файлов.'
        button_name: 'save_dir_path_button'


    Label:
        size_hint: 1, .5
        text: root.message
        color: utils.get_color_from_hex('000000')
        canvas.before:
            Color:
                rgba: utils.get_color_from_hex('eeeeee')
            Rectangle:
                pos: self.pos
                size: self.size
    Button:
        id: my_button
        size_hint: 1, .5
        name: 'Шаг 1'
        text: self.name
        on_release: app.root.play(self.name)
